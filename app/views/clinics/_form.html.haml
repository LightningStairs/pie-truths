= form_for @clinic do |f|
  - if @clinic.errors.any?
    #error_explanation
      %h2= "#{pluralize(@clinic.errors.count, "error")} prohibited this clinic from being saved:"
      %ul
        - @clinic.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .actions
    = f.submit 'Save'
